{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "airbnb-base"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    // Turning this off for render methods
    "class-methods-use-this": "off",
    "prefer-const": "off", // While I think we should actually use const, the "lets" get transformed far too often on save
    "import/extensions": "off",
    "no-console": "off",
    "no-plusplus": "off",
    "no-shadow": "off",
    "no-new": "off",
    "no-undef": "off",
    "no-bitwise": "off",
    "no-param-reassign": "off",
    "global-require": "off",
    "no-eval": "off",
    "import/no-dynamic-require": "off",
    "no-unused-vars": "off",
    "import/no-extraneous-dependencies": "off",
    "max-len": [
      "error",
      250
    ],
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ]
  }
}
